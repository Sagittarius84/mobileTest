<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.noorganization.instalist" >

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/InstalistTheme1"
        tools:replace="android:icon" >
        <activity
            android:name=".view.MainShoppingListView"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.RecipeChangeActivity"
            android:label="@string/edit_recipe" />


        <!-- SugarORM Settings -->
        <meta-data
            android:name="DATABASE"
            android:value="shopping.db" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" /> <!-- for debugging set this to true -->
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="org.noorganization.instalist.model" />

    </application>

</manifest>
